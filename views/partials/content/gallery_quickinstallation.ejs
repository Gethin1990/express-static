<section class="row mt grid">

    <div class="row center-block mb">
        <div class="col-md-4 col-md-offset-4 centered">
            <hr>
            <h4>
                <span class="text-muted">Quick-Installation</span>
            </h4>
        </div>
    </div>

    <div class="clearfix mt"></div>

    <div class="row mb center-block">
        <div class="col-lg-7 col-lg-offset-1 mt">
            <p class="lead">INSTAR offers a Installation Wizard, that will lead you through the first steps of the camera installation.</p>
        </div>

        <div class="col-lg-3 mt">
            <p>
                <a href="http://install.instar.de" target="_blank">
                    <button type="button" class="btn btn-primary btn-lg">Installation Wizard</button>
                </a>
            </p>
        </div>
    </div>

    <!-- Take Images from gallery-quickinstallation.json for Gallery -->

    <% if (qiPic.length > 0) { %>
        <% for (i=0; i<qiPic.length; i++) { %>
            <div class="col-xs-6 col-lg-4 mb">
                <a href="/Quick_Installation/<%= qiUrl[i] %>"><img src="<%= qiPic[i] %>" alt="<%= qiPicAlt[i] %>" class="img-fluid"></a>
            </div>
        <% } %>
    <% } %>

</section>
